<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout

        android:id="@+id/linearCintentId"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/logoo"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameWrapper"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <android.support.design.widget.TextInputEditText
                android:textColor="@color/brown"
                android:layout_margin="2dp"
                android:id="@+id/idUserNameLogIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name"

                android:text="a@gmail.com"
                android:textSize="20sp"
                android:imeOptions="actionDone"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordWrapper"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"

            >


            <android.support.design.widget.TextInputEditText
                android:id="@+id/idPasswordLogin"
                android:layout_margin="2dp"

                android:textColor="@color/brown"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:text="123456"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/btnLoginId"
            android:background="@drawable/round_button_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LogIn"
            android:shadowDx="5"
            android:textColor="@color/brown"
            android:elevation="5dp"
            android:textSize="16dp"
            android:shadowColor="@color/gray"/>

    </LinearLayout>
    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progressparLoginId"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:id="@+id/plsWaitTVid"
        android:layout_below="@+id/progressparLoginId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="please Wait .. "/>
</RelativeLayout>